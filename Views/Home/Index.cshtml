@model login
@{
    Layout = null;  
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diseño trabajo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .fondo {
            background: url('/html/fondo.png');
            background-size: cover;
            background-position: center;
            height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>

</head>
<body class="fondo d-flex justify-content-center align-items-center">
    <div class="bg-white p-5 rounded-5" style="width: 30rem">
        <div class="d-flex justify-content-center">
            <div>
                <img src="~/html/Overshop.png"
                     alt="perfil-del-usuario-icon"
                     style="height: 15rem" />
            </div>
        </div>
        <div class="text-center fs-1 fw-bold">Iniciar sesion</div>
        <!-- Login-->
        <form asp-action="inicio" asp-controller="Usuario" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mt-4">
                <div class="input-group-text bg-info">
                    <img src="~/html/usuario.png"
                         alt="usuario-icon"
                         style="height: 1rem" />
                </div>
                <input asp-for="correo" type="text" class="form-control" placeholder="Usuario" name="correo">
            </div>
            <span asp-validation-for="correo" class="text-danger"></span>
            <div class="input-group mt-4">
                <div class="input-group-text bg-info">
                    <img src="~/html/bloquear.png"
                         alt="bloquear"
                         style="height: 1rem" />
                </div>
                <input asp-for="password" type="password" class="form-control" placeholder="Contraseña" name="password">
            </div>
            <span asp-validation-for="password" class="text-danger"></span>
            <div class="mt-1 form-check">
                <input type="checkbox" name="connected" class="form-check-input">
                <label for="connected" class="form-check-label">mantenerme conectado</label>
            </div>
            <div class="d-grid">
                <button class="btn btn-info" type="submit">Ingresar</button>
            </div>
        </form>
        <span>no tienes cuenta? <a asp-action="registro" asp-controller="Iniciarsesion">Registrate</a></span> <br>
        <div class="mt-2">
            <span><a asp-action="contraseña" asp-controller="Home">Recuperar password</a></span> <br>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>