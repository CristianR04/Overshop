@model Inventariomodel
@{
    Layout = null;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Empleado</title>
    <style>
        .fondo-imagen {
            background-image: url('/html/fondo.png');
            background-size: cover;
            background-position: center;
            height: 100dvh;
            width: 100%;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="fondo-imagen text-center text-white d-flex justify-content-center align-items-center">

    <div class=" bg-white p-5 rounded-5 shadow" style="width: 60rem">
        <form asp-action="Administrador" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-dark text-center fs-1 fw-bold">Productos</div>
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="input-group mb-2">
                        <input asp-for="Id" class="form-control bg-light" type="text" placeholder="Codigo" aria-label="Codigo" id="Id" required>
                    </div>
                    <span asp-validation-for="Id" class="text-danger"></span>
                    <div class="input-group mb-2">
                        <input asp-for="Nombre" class="form-control bg-light" type="text" placeholder="Nombre" aria-label="Nombre" id="Nombre" required>
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                    <div class="input-group mb-2">
                        <input asp-for="marca" class="form-control bg-light" type="text" placeholder="Marca" aria-label="Marca" required>
                    </div>
                    <span asp-validation-for="marca" class="text-danger"></span>
                    <div class="input-group mb-2">
                        <input asp-for="modelo" class="form-control bg-light" type="text" placeholder="Modelo" aria-label="Modelo" required>
                    </div>
                    <span asp-validation-for="modelo" class="text-danger"></span>
                    <div class="input-group mt-2">
                        <input asp-for="ImageFile" class="form-control bg-light" type="file" required>
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="input-group mb-2">
                        <textarea asp-for="descripcion" class="form-control bg-light" placeholder="Descripcion" aria-label="Descripcion" required></textarea>
                    </div>
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                    <div class="input-group mb-2">
                        <input asp-for="valor" class="form-control bg-light" type="text" placeholder="Precio Venta" aria-label="Precio Venta" id="Valor" required>
                    </div>
                    <span asp-validation-for="valor" class="text-danger"></span>
                    <div class="input-group mb-2">
                        <select class="form-control" asp-for="estado" asp-items="Html.GetEnumSelectList<Estadoproduc>()"></select>
                    </div>
                    <div class="input-group mb-2">
                        <select class="form-control" asp-for="accesorios" asp-items="Html.GetEnumSelectList<Accesorios>()"></select>
                    </div>
                </div>
            </div>


            <button class="mt-2 btn btn-outline-success" type="submit">Guardar</button>

        </form>
        <form asp-action="menusuario" asp-controller="Home">

            <button class=" mt-2 btn btn-outline-danger" type="submit">Salir</button>

        </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    

</body>
</html>

