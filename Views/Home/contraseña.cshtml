@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .fondo {
            background: url('/html/fondo.png');
            background-size: cover;
            background-position: center;
            height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
    <title>Document</title>
</head>
<body class="fondo d-flex justify-content-center align-items center ">
    <div class="bg-white p-5 rounded-5 shadow" style="width: 30rem">
        <div class="text-dark text-center fs-1 fw-bold">
            Recuperar Contraseña
        </div>
        <div class="input group mt-4">
            <input class="form-control bg-light" type="text" placeholder="identificacion" aria-label="Identificación" required>
        </div>
        <div class="input group mt-3">
            <input class="form-control bg-light" type="text" placeholder="contraseña" aria-label="contraseña" required>
        </div>
        <div class="mt-2">
            <div class="btn btn-info text-white w-100 mt-3 fw-semibold shadow-sm" type="submit">Guardar</div>
        </div>
        <form asp-action="Index" asp-controller="Home">
        <div class="input-group mt-2">
            <input class="btn btn-info text-white w-100 mt-3 fw-semibold shadow-sm" type="submit" value="Volver">
        </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>