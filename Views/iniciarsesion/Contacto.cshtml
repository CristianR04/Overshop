@model Contactomodel
@{
    Layout = null;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .fondo {
            background: url('/html/fondo.png');
            background-size: cover;
            background-position: center;
            height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="fondo d-flex justify-content-center align-items-center ">
    <div class="text-center bg-white p-5 rounded-4 shadow" style="width: 30rem">
        <div class="text-center fs-1 fw-bold mt-2">Contactanos</div>
        <form asp-action="enviarcontacto" asp-controller="IniciarSesion" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group">
                <input asp-for="nombre" class="form-control bg-light mt-4" type="text" placeholder="Ingrese su nombre">
            </div>
            <span asp-validation-for="nombre" class="text-danger"></span>
            <div class="input-group">

                <input asp-for="correo" class="form-control bg-light mt-4" type="text" placeholder="Ingrese su correo">
            </div>
            <span asp-validation-for="correo" class="text-danger"></span>
            <div class="input-group">

                <textarea asp-for="mensaje" class="form-control bg-light m-4" type="text" placeholder="Mensaje"></textarea>
            </div>
            <span asp-validation-for="mensaje" class="text-danger"></span>
            <input class=" btn btn-success mt-2" type="submit" value="Enviar">

            
        
        </form>
        <form asp-action="menusuario" asp-controller="Home">
            <input class=" btn btn-danger mt-2" type="submit" value="Volver">

        </form>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>