@model registromodel
@{
    Layout = null;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        .fondo-imagen {
            background: url('/html/fondo.png');
            background-size: cover;
            background-position: center;
            height: 100%;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    </style>

</head>
<body class="fondo-imagen ">
    <div class="container mt-5 ">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="bg-white p-5 rounded-5">
                    <div class="card-header text-center">
                        <h4>Registro</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="registro" asp-controller="Usuario" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mt-2">
                                <input asp-for="identificacion" type="text" class="form-control" placeholder="Ingrese su numero de identificacion">
                            </div>
                            <span asp-validation-for="identificacion" class="text-danger"></span>
                            <div class="mt-2">
                                <input asp-for="nombre" type="text" class="form-control" placeholder="Ingresa tu nombre">
                            </div>
                            <span asp-validation-for="nombre" class="text-danger"></span>
                            <div class="mt-2">
                                <input asp-for="apellido" type="text" class="form-control" placeholder="ingresa tu apellido">
                            </div>
                            <span asp-validation-for="apellido" class="text-danger"></span>
                            <div class="mt-2">
                                <input asp-for="nacimiento" type="date" class="form-control" max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")">
                            </div>
                            <span asp-validation-for="nacimiento" class="text-danger"></span>
                            <div class="mt-2">
                                <input asp-for="correo" type="email" class="form-control" placeholder="Ingresa tu correo electrónico">
                            </div>
                            <span asp-validation-for="correo" class="text-danger"></span>
                            <div class="input-group mt-2">

                                <div class="form-control input-group ">

                                    <select class="form-control" asp-for="sex" asp-items="Html.GetEnumSelectList<Tiposex>()"></select>
                                </div>
                            </div>
                            <div class="mt-2">
                                <input asp-for="password" type="password" class="form-control" placeholder="Ingresa tu contraseña">
                            </div>
                            <span asp-validation-for="password" class="text-danger"></span>
                            <div class="input group mt-2">
                                <input asp-for="confircontraseña" type="password" class="form-control" placeholder="Confirma tu contraseña">
                            </div>
                            <span asp-validation-for="confircontraseña" class="text-danger"></span>
                            <button type="submit" value="Guardar" class="mt-2 btn btn-outline-primary w-100" id="submitBtn">Registrarse</button>
                            <br />
                        </form>

                        <form asp-action="Index" asp-controller="Home">
                            <div>
                                <input class="form-control  btn btn-outline-danger mt-1" type="submit"  value="Salir" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    
</body>
</html>
